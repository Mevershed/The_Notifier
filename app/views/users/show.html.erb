
  <div class="user-box">

    <div id="dashboard-header">
      <h1> My Dashboard </h1>
    </div>

    <div id="user-photo">
      <%= image_tag(@user.user_photo) %> 
    </div>

    <div class="user-info-container">
      <div id="user-name">
        <h2> <%= @user.name %> </h2>
          <%= (Company.find_by(id: @user.company_id)).name %>
      </div>
    </div>

    <div id="user-info-header">
      <h2> Contact Info </h2>
    </div>

    <div class="user-info-container">
      <div>
        <%= @user.email %>
      </div>
      <div>
        <%= @user.address %>
      </div>
      <div>
        <%= @user.phone %>
      </div>
      <div>
        <%= @user.emergency_contact %>
      </div>
        <!-- <%= @user.shift_preference %> -->
    </div>

    <div id="user-edit-header">
      <%= link_to 'Edit', edit_user_path(@user) %>
    </div>

    <div id="user-info-header">
      <h2> Work Preferences </h2>
    </div>

    <div class="user-info-container">
      <div>
        <%= @user.shift_preference %>
      </div>
    </div>

    <div id="user-edit-header">
      <%= link_to 'Edit', edit_user_path(@user) %>
    </div>

  </div>

